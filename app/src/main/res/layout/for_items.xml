<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="95dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_items_rounded"
    android:layout_margin="5dp"
    android:padding="5dp">

    <TextView
        android:id="@+id/titleNoteTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="100dp"
        tools:text="probando titulo"
        android:textSize="25sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/dateNote"
        android:textColor="@color/white"
        />
    
    <TextView
        android:id="@+id/bodyNote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Este seccion debe consistir en una descripcion de la tarea a realizar"
        app:layout_constraintTop_toBottomOf="@+id/titleNoteTxt"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@color/white"
        />

    <TextView
        android:id="@+id/dateNote"
        android:layout_width="wrap_content"
        tools:text="10/11/2023"
        android:layout_marginEnd="5dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/white"
        />

</androidx.constraintlayout.widget.ConstraintLayout>